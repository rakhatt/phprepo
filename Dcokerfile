FROM alpine:3.14

RUN apk add --no-cache --update \
    php7 \
    php7-fpm \
    php7-mysqli \
    php7-json \
    php7-openssl \
    php7-curl \
    php7-zlib \
    php7-xml \
    php7-phar \
    php7-intl \
    php7-dom \
    php7-xmlreader \
    php7-ctype \
    php7-session \
    nginx 
COPY ./default.conf ./etc/nginx/http.d/
COPY ./1.php ./var/www/localhost/
COPY ./start.sh ./
EXPOSE 80 9000

CMD ["/bin/sh", "-c", "php-fpm7 && nginx -g 'daemon off;'"]
